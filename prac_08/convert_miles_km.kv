# Miles to Kilometres Converter

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text:app.handle_conversion()
        BoxLayout:
            size_hint_x:0.25
            orientation: 'vertical'
            Button
                text:'Up'
                on_press:app.handle_increment(1)
            Button
                text:'Down'
                on_press:app.handle_increment(-1)
    BoxLayout:
        Label:
            id: output_km
            font_size: 48
            text:app.km
            color:(1,1,0,1)
